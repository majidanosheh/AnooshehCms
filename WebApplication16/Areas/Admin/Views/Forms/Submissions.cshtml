@model WebApplication16.Models.Form

@{
    ViewData["Title"] = "اطلاعات ارسال شده برای فرم: " + Model.Name;
}

<div class="d-flex justify-content-between align-items-center">
    <div class="pagetitle">
        <h1>@ViewData["Title"]</h1>
    </div>
    <div>
        <a asp-action="ExportToCsv" asp-route-id="@Model.Id" class="btn btn-success">
            <i class="bi bi-file-earmark-spreadsheet me-1"></i>
            خروجی CSV
        </a>
    </div>
</div>

<section class="section">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">لیست ارسال‌ها</h5>
            @if (Model.Submissions != null && Model.Submissions.Any())
            {
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>تاریخ ارسال</th>
                            <th>آدرس IP</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Submissions.OrderByDescending(s => s.CreatedAt))
                        {
                            <tr>
                                <td>@item.CreatedAt.ToString("yyyy/MM/dd HH:mm")</td>
                                <td>@item.IpAddress</td>
                                <td>
                                    <a asp-action="SubmissionDetails" asp-route-id="@item.Id" class="btn btn-sm btn-info">مشاهده جزئیات</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    هنوز هیچ اطلاعاتی برای این فرم ارسال نشده است.
                </div>
            }
        </div>
    </div>
</section>



