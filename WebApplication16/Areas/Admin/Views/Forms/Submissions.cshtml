@model WebApplication16.Models.Form

@{
    ViewData["Title"] = "لیست اطلاعات ارسالی برای فرم: " + Model.Name;
}

<div class="pagetitle">
    <h1>@ViewData["Title"]</h1>
</div>

<section class="section">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>

            @if (!Model.Submissions.Any())
            {
                <div class="alert alert-info">هیچ اطلاعاتی برای این فرم ارسال نشده است.</div>
            }
            else
            {
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>تاریخ ارسال</th>
                            <th>آدرس IP</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var submission in Model.Submissions)
                        {
                            <tr>
                                <td>@submission.CreatedAt.ToString("yyyy/MM/dd HH:mm")</td>
                                <td>@submission.IpAddress</td>
                                <td>
                                    <a href="#" class="btn btn-sm btn-info">مشاهده جزئیات</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</section>
