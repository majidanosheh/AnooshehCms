@model Form

@{
    ViewData["Title"] = "ایجاد فرم جدید";
}

<div class="pagetitle"><h1>@ViewData["Title"]</h1></div>

<section class="section">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">اطلاعات اولیه فرم</h5>
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row mb-3">
                    <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label asp-for="Slug" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Slug" class="form-control" />
                        <span asp-validation-for="Slug" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-10 offset-sm-2">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="IsActive" />
                            <label class="form-check-label" asp-for="IsActive">
                                @Html.DisplayNameFor(model => model.IsActive)
                            </label>
                        </div>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">ذخیره و ادامه به طراحی</button>
                    <a asp-action="Index" class="btn btn-secondary">انصراف</a>
                </div>
            </form>
        </div>
    </div>
</section>