@model WebApplication16.Models.Form

@{
    ViewData["Title"] = "حذف فرم";
}

<div class="pagetitle">
    <h1>@ViewData["Title"]</h1>
</div>

<div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">آیا از حذف این فرم مطمئن هستید؟</h4>
    <p>شما در حال حذف فرم <strong>"@Model.Name"</strong> هستید. با حذف این فرم، تمام فیلدهای طراحی شده و تمام اطلاعاتی که توسط کاربران ارسال شده نیز برای همیشه حذف خواهند شد.</p>
    <hr>
    <p class="mb-0">این عملیات غیرقابل بازگشت است.</p>
</div>

<section class="section">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">جزئیات فرم</h5>
            <dl class="row">
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Description)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Slug)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Slug)</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IsActive)</dt>
                <dd class="col-sm-10">@(Model.IsActive ? "فعال" : "غیرفعال")</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">بله، حذف کن</button>
                <a asp-action="Index" class="btn btn-secondary">انصراف</a>
            </form>
        </div>
    </div>
</section>

