@model IEnumerable<WebApplication16.Models.Form>

@{
    ViewData["Title"] = "مدیریت فرم‌ها";
}

<div class="pagetitle">
    <h1>@ViewData["Title"]</h1>
</div>

<p>
    <a asp-action="Create" class="btn btn-primary">ایجاد فرم جدید</a>
</p>

<section class="section">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">لیست فرم‌ها</h5>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>نام فرم</th>
                        <th>اسلاگ</th>
                        <th>وضعیت</th>
                        <th>تاریخ ایجاد</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Slug</td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success">فعال</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">غیرفعال</span>
                                }
                            </td>
                            <td>@item.CreatedAt.ToString("yyyy/MM/dd")</td>
                            <td>
                                <a asp-action="Design" asp-route-id="@item.Id" class="btn btn-sm btn-success" title="طراحی"><i class="bi bi-palette"></i></a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="ویرایش"><i class="bi bi-pencil-square"></i></a>
                                <a asp-action="Submissions" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="مشاهده ارسال‌ها"><i class="bi bi-archive"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="حذف"><i class="bi bi-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

