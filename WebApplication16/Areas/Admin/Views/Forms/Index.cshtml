@model IEnumerable<Form>

@{
    ViewData["Title"] = "مدیریت فرم‌ها";
}

<div class="pagetitle">
    <h1>@ViewData["Title"]</h1>
</div>

<p>
    <a asp-action="Create" class="btn btn-primary">ایجاد فرم جدید</a>
</p>

<section class="section">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">لیست فرم‌ها</h5>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>نام فرم</th>
                        <th>اسلاگ</th>
                        <th>وضعیت</th>
                        <th>تاریخ ایجاد</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Slug</td>
                            <td>@(item.IsActive ? "فعال" : "غیرفعال")</td>
                            <td>@item.CreatedAt.ToShortDateString()</td>
                            <td>
                                <a asp-action="Design" asp-route-id="@item.Id" class="btn btn-sm btn-success">طراحی</a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">ویرایش</a>
                                <a asp-action="Submissions" asp-route-id="@item.Id" class="btn btn-sm btn-info">مشاهده ارسال‌ها</a> <!-- لینک اصلاح شد -->
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">حذف</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
