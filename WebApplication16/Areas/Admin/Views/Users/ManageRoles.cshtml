@model WebApplication16.ViewModels.UserRolesViewModel

@{
    ViewData["Title"] = "مدیریت نقش‌ها برای کاربر: " + Model.UserName;
}

<h1>@ViewData["Title"]</h1>

<form asp-action="ManageRoles" method="post">
    <input type="hidden" asp-for="UserId" />
    <div class="card">
        <div class="card-header">
            <h5>نقش‌های دسترسی</h5>
            <p class="text-muted">نقش‌هایی را که می‌خواهید این کاربر داشته باشد، انتخاب کنید.</p>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Roles.Count; i++)
            {
                <div class="form-check">
                    <input type="hidden" asp-for="Roles[i].RoleId" />
                    <input type="hidden" asp-for="Roles[i].RoleName" />
                    <input asp-for="Roles[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="Roles[i].IsSelected">
                        @Model.Roles[i].RoleName
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-success">ذخیره تغییرات</button>
            <a asp-action="Index" class="btn btn-secondary">انصراف</a>
        </div>
    </div>
</form>