@model IEnumerable<WebApplication16.Models.MenuItem>

<ul class="list-group sortable-list">
    @foreach (var item in Model)
    {
        <!-- توضیح فنی: data-id یک "Custom Data Attribute" است. این یک روش استاندارد برای ذخیره اطلاعات
             اضافی در عناصر HTML است که جاوا اسکریپت می‌تواند به راحتی به آن دسترسی پیدا کند. -->
        <li class="list-group-item" data-id="@item.Id">
            <div class="d-flex justify-content-between align-items-center">
                <span>
                    <!-- توضیح UX: handle یک کلاس است که به SortableJS می‌گوید فقط با کشیدن این عنصر،
                         آیتم باید جابجا شود. این کار از جابجایی تصادفی در زمان کلیک روی بخش‌های دیگر جلوگیری می‌کند. -->
                    <i class="fas fa-bars me-2 handle" style="cursor: move;"></i> <!-- آیکون دستگیره -->
                    <strong>@item.Title</strong>
                    <small class="text-muted ms-2">(@item.Url)</small>
                </span>
                <div>
                    <a asp-action="EditItem" asp-route-id="@item.Id" class="btn btn-sm btn-warning">ویرایش</a>
                    <a asp-action="DeleteItem" asp-route-id="@item.Id" class="btn btn-sm btn-danger">حذف</a>
                </div>
            </div>

            @if (item.SubMenuItems != null && item.SubMenuItems.Any())
            {
                <div class="ms-4 mt-2">
                    <partial name="_MenuItemTree" model="item.SubMenuItems.OrderBy(i => i.Order)" />
                </div>
            }
        </li>
    }
</ul>