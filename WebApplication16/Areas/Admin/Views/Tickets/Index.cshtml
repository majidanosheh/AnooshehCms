@model PaginatedList<TicketViewModel>
@using WebApplication16.ViewModels
@using WebApplication16.Extensions

@{
    ViewData["Title"] = "مدیریت تیکت‌ها";
}

<h1>@ViewData["Title"]</h1>
<p>در این بخش می‌توانید تیکت‌های پشتیبانی ثبت شده را مشاهده و مدیریت کنید.</p>

<p>
    <a asp-action="Create" class="btn btn-success">ایجاد تیکت جدید</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>عنوان</th>
            <th>کاربر</th>
            <th>وضعیت</th>
            <th>اولویت</th>
            <th>تاریخ ایجاد</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.UserEmail</td>
                <td>@item.Status.GetDisplayName()</td>
                <td>@item.Priority.GetDisplayName()</td>
                <td>@item.CreatedAt.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">مشاهده</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">ویرایش</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- کنترل‌های صفحه‌بندی -->
@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" class="btn btn-outline-secondary @prevDisabled">
    صفحه قبلی
</a>
<a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" class="btn btn-outline-secondary @nextDisabled">
    صفحه بعدی
</a>