@model WebApplication16.ViewModels.ErrorViewModel
@{
    ViewData["Title"] = "خطا";
}

<div class="text-center mt-5">
    <h1 class="display-4 text-danger">خطا در پردازش درخواست</h1>
    <p class="lead">@Model.ErrorMessage</p>

    @if (Model.ShowRequestId)
    {
        <p>
            <strong class="text-muted">شناسه پیگیری:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">بازگشت به صفحه اصلی</a>
</div>